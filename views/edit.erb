<form method="post" action="/students/<%= @student.id %>">

  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select">
    <option value="<%= House.find_id_by_name('gryffindor') %>"
      <%= "selected" if @student.house.name == "gryffindor" %>
      >Gryffindor</option>
      <option value="<%= House.find_id_by_name('hufflepuff') %>"
        <%= "selected" if @student.house.name == "hufflepuff" %>
        >Hufflepuff</option>
        <option value="<%= House.find_id_by_name('ravenclaw') %>"
          <%= "selected" if @student.house.name == "ravenclaw" %>
          >Ravenclaw</option>
          <option value="<%= House.find_id_by_name('slytherin') %>"
            <%= "selected" if @student.house.name == "slytherin" %>
            >Slytherin</option>
          </select>

          <label for="first-name-field">First Name: </label>
          <input type="text" name="first_name" id="first-name-field"
          value="<%= @student.first_name %>">

          <label for="last-name-field">Last Name: </label>
          <input type="text" name="last_name" id="last-name-field"
          value="<%= @student.last_name %>">

          <label for="age-field">Age: </label>
          <input type="number" name="age" id="age-field"
          value="<%= @student.age %>">
          <br>
          <input type="submit" value="Submit new student details">

        </form>
